<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane prefHeight="511.0" prefWidth="772.0"
            style="-fx-background-color: MidnightBLue; -fx-border-color: Turquoise; -fx-border-style: Dotted; -fx-border-width: 3;"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unibo.pensilina14.bullet.ballet.menu.controller.HomePageController">
    <children>
        <Label alignment="BASELINE_CENTER" contentDisplay="TOP" prefHeight="50.0" prefWidth="785.0" text="BULLET BALLET"
               AnchorPane.bottomAnchor="438.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="3.0"
               AnchorPane.topAnchor="3.0">
            <font>
                <Font name="Comic Sans MS Bold" size="48.0"/>
            </font>
            <effect>
                <InnerShadow choke="0.02">
                    <color>
                        <Color red="1.0" green="0.125490203499794" blue="0.125490203499794"/>
                    </color>
                </InnerShadow>
            </effect>
        </Label>
        <VBox alignment="CENTER" prefHeight="511.0" prefWidth="791.0" spacing="50.0" AnchorPane.bottomAnchor="3.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#newGameOnMouseClick" prefHeight="50.0"
                        prefWidth="320.0" text="%btnNewGame.text" textFill="#d32c2c">
                    <effect>
                        <DropShadow height="39.2" radius="28.27" spread="0.18" width="75.88">
                            <color>
                                <Color red="0.9210526347160339" green="0.12365984171628952" blue="0.12365984171628952"/>
                            </color>
                        </DropShadow>
                    </effect>
                    <font>
                        <Font name="Comic Sans MS" size="20.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#settingsOnMouseClick" prefHeight="50.0"
                        prefWidth="320.0" text="%btnSettings.text" textFill="#d32c2c">
                    <effect>
                        <DropShadow height="39.2" radius="28.27" spread="0.18" width="75.88">
                            <color>
                                <Color red="0.9210526347160339" green="0.12365984171628952" blue="0.12365984171628952"/>
                            </color>
                        </DropShadow>
                    </effect>
                    <font>
                        <Font name="Comic Sans MS" size="20.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#statsOnMouseClick" prefHeight="50.0" prefWidth="320.0"
                        text="%btnStats.text" textFill="#d32c2c">
                    <effect>
                        <DropShadow height="39.2" radius="28.27" spread="0.18" width="75.88">
                            <color>
                                <Color red="0.9210526347160339" green="0.12365984171628952" blue="0.12365984171628952"/>
                            </color>
                        </DropShadow>
                    </effect>
                    <font>
                        <Font name="Comic Sans MS" size="20.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#exitOnMouseClicked" prefHeight="50.0" prefWidth="320.0"
                        text="%btnExit.text" textFill="#d32c2c">
                    <effect>
                        <DropShadow height="39.2" radius="28.27" spread="0.18" width="75.88">
                            <color>
                                <Color red="0.9210526347160339" green="0.12365984171628952" blue="0.12365984171628952"/>
                            </color>
                        </DropShadow>
                    </effect>
                    <font>
                        <Font name="Comic Sans MS" size="20.0"/>
                    </font>
                </Button>
            </children>
            <padding>
                <Insets left="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@css/style.css"/>
    </stylesheets>
</AnchorPane>
